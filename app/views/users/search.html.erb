<% provide(:title, @title) %>

<div id="center_column">
  <% if @users && !@users.empty? %>
    <h1><%= @title %></h1>

    <% if @users.length > 10 %>
      <% @users = @users.paginate(:page => 1, :per_page => 10) %>
      <% paginated = true %>
      <span class="users_list">
        <%= will_paginate @users %>
      </span>
    <% end %>

    <ul class="users">
      <%= render @users %>
    </ul>

    <% if paginated %>
      <span class="users_list">
        <%= will_paginate @users %>
      </span>
    <% end %>
  <% else %>
    <h1>No results found</h1>
    <br>
    <br>
    <br>
    <div id="failed_search_link">
      <%= link_to "Home", user_path(current_user.id) %>
    </div>
  <% end %>
</div>