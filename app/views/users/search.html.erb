<% provide(:title, "Results") %>

<div id="center_column">
  <h1>All Users</h1>

  <% @users = @users.paginate(:page => 1, :per_page => 10) %>

  <% if @users.length > 10 %>
    <span class="users_list">
      <%= will_paginate @users %>
    </span>
  <% end %>

  <ul class="users">
    <%= render @users %>
  </ul>

  <% if @users.length > 10 %>
    <span class="users_list">
      <%= will_paginate @users %>
    </span>
  <% end %>
</div>